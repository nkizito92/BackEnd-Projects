<% include partials/header %>
<div class="container">
   
<header class="jumbotron">
    
    <div class="container">
    <h1>Welcome to YelpCamp</h1>
    <p>Where you can view areas all around the world</p>
    <p><a  class="btn btn-primary btn-lg" href="/campgrounds/new">Create CG</a></p>
    </div>
</header>
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach( function(campground){ %>
        <div class="col-md-3 col-sm-6">
           
                <div class="thumbnail">
                    <div class="caption"><h4><%=campground.name; %></h4></div>
                <img src="<%=campground.image %>">
                    <p>               
                     <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Info</a>
                    </p>
                </div>
        </div>
    <% }); %>
    
    <a href="/"> Go back</a>
    </div>
</div>
<% include partials/footer %>